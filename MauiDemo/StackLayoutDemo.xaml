<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.StackLayoutDemo"
             Title="StackLayoutDemo">
    <VerticalStackLayout Margin="20" HorizontalOptions="Start">
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Nome"/>
            <Entry WidthRequest="150" HeightRequest="30" />
            <Label Text="Informe o nome" TextColor="Red" />
        </HorizontalStackLayout>
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Idade"/>
            <Entry WidthRequest="150" HeightRequest="30" />
            <Label Text="Informe a idade" TextColor="Red" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>